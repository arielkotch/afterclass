<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f3f3f3"
                android:paddingBottom="2dp"
             >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardviewAnswer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardElevation="1.5dp"
        card_view:cardCornerRadius="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/courseImage"
                android:src="@drawable/ufo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myCode"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:id="@+id/myName"
                android:textSize="16dp"
                android:gravity="center"
                android:text="@string/Dummy_Text"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_below="@+id/myInstructor"
                android:layout_height="wrap_content" />
            <TextView
                android:text="myDepartment"
                android:id="@+id/myDepartment"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/myCode"
                android:text="myCode"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxDelete"
                android:onClick="CheckBox"
                android:layout_below="@+id/myName"
                android:layout_alignRight="@+id/myDepartment"
                android:layout_alignEnd="@+id/myDepartment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myDepartment"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="myInstructor"
                android:id="@+id/myInstructor"
               />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>



